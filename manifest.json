{
    "manifest_version": 3,
    "name": "Tab Limiter",
    "version": "1.1",
    "description": "Closes the oldest open tabs if the total number exceeds a user-specified limit.",
    "permissions": [
        "tabs",
        "storage",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}